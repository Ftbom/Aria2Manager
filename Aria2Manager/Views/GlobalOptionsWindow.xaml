                                    <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="{DynamicResource FileName}" VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="1" HorizontalAlignment="Center" TextWrapping="Wrap" Text="{Binding Value.value}" VerticalAlignment="Center" Width="350" IsEnabled="{Binding Value.is_enabled}"/>
                                </Grid>
                            </ListViewItem>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </TabItem>
        </TabControl>
        <Button Content="{DynamicResource Save}" Grid.Row="1" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
